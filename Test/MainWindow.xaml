<Window x:Class="Test.MainWindow"
        xmlns="https://github.com/grokys/Avalonia"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Test;assembly=Test"
        Height="350" Width="525">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:ViewModel}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text="{Binding Description}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <StackPanel Name="stackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Name="textBox" Text="TextBox"></TextBox>
        <Button>Button</Button>
        <Border Name="border"/>

        <Border BorderBrush="Gray" BorderThickness="1" Margin="2">
            <StackPanel Orientation="Horizontal" Margin="8">
                <ItemsControl Name="itemsControl" ItemsSource="{Binding}"
                              Margin="4" Padding="4" BorderBrush="Blue" BorderThickness="1"/>
                <StackPanel>
                    <Button Name="add" Margin="4">Add</Button>
                    <Button Name="remove" Margin="4">Remove</Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>        

